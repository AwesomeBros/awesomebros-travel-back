<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trip_gg.comment.CommentMapper">

    <!-- ✅ 댓글 저장 -->
    <insert id="insertComment" parameterType="com.trip_gg.comment.Comment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comments (posts_id, users_id, content, created_at)
        VALUES (#{posts_id}, #{users_id}, #{content}, #{created_at})
    </insert>

    <!-- ✅ counts 테이블 comment_count +1 -->
    <update id="increaseCommentCount" parameterType="int">
        UPDATE counts
        SET comment_count = comment_count + 1
        WHERE posts_id = #{posts_id}
    </update>

    <!-- ✅ 댓글 ResultMap 정의 -->
    <resultMap id="CommentResultMap" type="com.trip_gg.comment.Comment">
        <id property="id" column="id"/>
        <result property="posts_id" column="posts_id"/>
        <result property="users_id" column="users_id"/>
        <result property="content" column="content"/>
        <result property="created_at" column="created_at"/>
        <result property="nickname" column="nickname"/>
    </resultMap>

    <!-- 게시글별 댓글 조회 -->
    <select id="findCommentsByPostId" resultMap="CommentResultMap">
        SELECT
            c.id,
            c.posts_id,
            c.users_id,
            c.content,
            c.created_at,
            u.nickname
        FROM comments c
                 JOIN users u ON c.users_id = u.id
        WHERE c.posts_id = #{posts_id}
        ORDER BY c.id DESC
    </select>

    <!-- 댓글 수정 -->
    <update id="updateCommentById">
        UPDATE comments
        SET content = #{content}
        WHERE id = #{id}
    </update>

    <!-- ✅ 댓글 개수 조회 -->
    <select id="countCommentsByPostId" resultType="int">
        SELECT COUNT(*) FROM comments WHERE posts_id = #{posts_id}
    </select>

    <select id="findCommentsByUserId" parameterType="string" resultMap="CommentResultMap">
        SELECT c.*
        FROM comments c
        WHERE c.users_id = #{users_id}
        ORDER BY c.created_at DESC
    </select>
</mapper>
