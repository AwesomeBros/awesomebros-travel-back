<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trip_gg.country.CountryMapper">


    <!-- 최신 게시글 불러오기 -->
    <select id="findAll" resultType="com.trip_gg.country.Country">
        SELECT id, name
        FROM countries
        ORDER BY id DESC
    </select>

</mapper>